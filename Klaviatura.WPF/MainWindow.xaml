                    Style="{StaticResource ResourceKey=buttonStyle}"/>
            <Button Template="{DynamicResource RoundedButtonStyle}" x:Name="buttonN" Content="n" Background="Violet" Width="45" 
                    Style="{StaticResource ResourceKey=buttonStyle}"/>
